<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_receipt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/roboto_reg"
        android:text="Car Details"
        android:textAlignment="center"
        android:textColor="@color/clr_222B45"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <View
        android:id="@+id/v_receipt_1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/txt_receipt_title"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="14dp"
        android:background="@color/clr_black" />

    <LinearLayout
        android:id="@+id/car_detail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_receipt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Make"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/car_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Make"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Model"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/car_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car model"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Color"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/car_clr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Color"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car Number"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/car_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_reg"
                android:gravity="start"
                android:text="Car NUmber"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/v_receipt_2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/car_detail1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="14dp"
        android:background="@color/clr_black" />

    <TextView
        android:id="@+id/ok_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/v_receipt_2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/cureve_rect"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/clr_white"
        android:textSize="@dimen/_14sdp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@+id/ok_txt" />

</RelativeLayout>