<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.client.ui.homeScreen.wallet.WalletFragViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:onClick="@{viewModel::onCLickBack}"
                    app:srcCompat="@drawable/ic_back_img" />


                <TextView
                    android:id="@+id/back_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/back_arrow"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@{viewModel.translationModel.txt_wallet}"
                    android:textColor="@color/clr_0A2463"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:id="@+id/vw1"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@+id/back_txt"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/gray_holo_light" />

                <ImageView
                    android:id="@+id/wall_img"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/vw1"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_wallet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vw1"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/curr_bal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_curr_bal}"
                        android:textColor="@color/clr_222B45" />

                    <TextView
                        android:id="@+id/curr_bal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@{viewModel.WalletBalance}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <View
                    android:id="@+id/vw2"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@+id/wall_img"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/gray_holo_light" />


                <LinearLayout
                    android:id="@+id/add_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw2"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_reg"
                        android:gravity="center"
                        android:onClick="@{viewModel.addCard}"
                        android:text="@{viewModel.translationModel.txt_add_card}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_16sdp" />

                    <!--                    -->


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_nor_cur"
                        android:fontFamily="@font/roboto_reg"
                        android:gravity="center"
                        android:onClick="@{viewModel::onCLickAddMoney}"
                        android:text="@{viewModel.translationModel.txt_add_money}"
                        android:textColor="@color/clr_white"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/pay_hist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/add_money"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/clr_F8F8F8"
                    android:fontFamily="@font/roboto_reg"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@{viewModel.translationModel.txt_Pay_history}"
                    android:textColor="@color/clr_222B45"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:id="@+id/vw3"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/pay_hist"
                    android:background="@color/gray_holo_light" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw3"
                    android:layout_marginTop="@dimen/_5sdp" />


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</layout>