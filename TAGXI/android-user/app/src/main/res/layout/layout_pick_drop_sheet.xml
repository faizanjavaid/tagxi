<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="pdsheetviewModel"
            type="com.tyt.client.ui.homeScreen.mapFrag.MapFragViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/pickdrop_sheet_co_ord_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustResize">

        <LinearLayout
            android:id="@+id/pickdroplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:background="@color/clr_white"
            app:layout_behavior=".utilz.CustomBottomSheetBehavior"
            android:orientation="vertical"
            app:behavior_hideable="true"
            tools:showIn="@layout/fragment_map_scrn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--app:layout_behavior="@string/bottom_sheet_behavior"-->

            <ImageView
                android:id="@+id/divideric"
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_divider_bottom_menu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divideric"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pickdrop_fav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@{pdsheetviewModel.fav_title}"
                    tools:text="Favourites"
                    android:textColor="@color/clr_black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

              <!--  <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favouiteplace_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:visibility="@{pdsheetviewModel.show_dropui?View.GONE:View.VISIBLE}"
                        android:layout_gravity="center_vertical|center_horizontal|center"
                        android:elevation="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:onClick="@{pdsheetviewModel::OnclickCurrentLocPick}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawablePadding="@dimen/_10sdp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@{pdsheetviewModel.currloc}"
                                tools:text="Current Location"
                                android:textStyle="bold"
                                android:textColor="@color/clr_black"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:textSize="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textAlignment="center"
                                app:drawableStartCompat="@drawable/curr_loc_butt" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:elevation="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:onClick="@{pdsheetviewModel::OnclickLocateinMapPick}"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@{pdsheetviewModel.locateinmap}"
                            tools:text="Locate on Map"
                            android:textAlignment="center"
                            android:textColor="@color/clr_black"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_locate_map" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:onClick="@{pdsheetviewModel::OnclickEnterdeslaterPick}"
                        android:elevation="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:visibility="@{pdsheetviewModel.show_dropui?View.VISIBLE:View.GONE}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@{pdsheetviewModel.enterlater}"
                            tools:text="Enter  Later"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textColor="@color/clr_black"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            app:drawableStartCompat="@drawable/drop_marker" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>



               <!-- </androidx.core.widget.NestedScrollView>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pickdrop_options_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal|clip_vertical"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:visibility="@{pdsheetviewModel.show_dropui?View.GONE:View.VISIBLE}"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{pdsheetviewModel::OnclickCurrentLocPick}"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Current Location"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        app:drawableStartCompat="@drawable/curr_loc_butt" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/clr_black"
                    android:visibility="@{pdsheetviewModel.show_dropui?View.GONE:View.VISIBLE}" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{pdsheetviewModel::OnclickLocateinMapPick}"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Locate on Map"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_locate_map" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{pdsheetviewModel::OnclickEnterdeslaterPick}"
                    android:padding="@dimen/_5sdp"
                    android:visibility="@{pdsheetviewModel.show_dropui?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Enter  Later"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/drop_marker" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
