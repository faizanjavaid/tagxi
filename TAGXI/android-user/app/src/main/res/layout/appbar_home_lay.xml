<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModelAppBarHome"
            type="com.tyt.client.ui.homeScreen.mapFrag.MapFragViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/homemapcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_8sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/llhomebar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/more_icon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/whit_circle"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_hambar" />


                <TextView
                    android:id="@+id/pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_toStartOf="@+id/scedule_card"
                    android:layout_weight="3"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_reg"
                    android:gravity="center_vertical"
                    android:hint="@{viewModelAppBarHome.translationModel.txt_enter_pick}"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@{viewModelAppBarHome.newpickupAddress}"
                    android:textColor="@color/clr_353B50"
                    android:textSize="@dimen/_10sdp"
                    app:drawableStartCompat="@drawable/green_rect" />

                <!-- android:onClick="@{viewModelAppBarHome::onClickPickup}"-->

                <ImageView
                    android:id="@+id/fav_icon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/whit_circle"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_fav" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</layout>