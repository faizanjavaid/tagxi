<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModelBT3"
            type="com.tyt.client.ui.homeScreen.makeTrip.MakeTripViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/book_co_ordlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/booking_main_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@color/clr_white"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_dot" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/grey"
                        android:foregroundGravity="center_vertical"
                        android:visibility="@{viewModelBT3.showdropbookui?View.VISIBLE:View.GONE}" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/red_dot"
                        android:visibility="@{viewModelBT3.showdropbookui?View.VISIBLE:View.GONE}" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/clr_white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@{viewModelBT3.pickupAddress}"
                            android:textColor="@color/clr_black"
                            android:textSize="@dimen/_9sdp"
                            tools:text="PickUp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@{viewModelBT3.dropAddress}"
                            android:textColor="@color/clr_black"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="@{viewModelBT3.showdropbookui?View.VISIBLE:View.GONE}"
                            tools:text="Drop" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/scedule_card"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:onClick="@{viewModelBT3::onCLickClock}"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <!--android:visibility="@{viewModelBT3.dropAddress==null?View.GONE:View.VISIBLE}"-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="@{!viewModelBT3.isDateChoosen?View.VISIBLE:View.GONE}"
                                tools:visibility="gone">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    app:srcCompat="@drawable/scedule_img" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Now"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="@{viewModelBT3.isDateChoosen?View.VISIBLE:View.GONE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_4sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:text="@{viewModelBT3.splittedDate}"
                                    android:textColor="@color/clr_222B45"
                                    android:textSize="@dimen/_10sdp"
                                    tools:text="15 Jul" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:paddingEnd="@dimen/_4sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:text="@{viewModelBT3.splittedTime}"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_7sdp"
                                    tools:text="5:55 PM" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:onClick="@{viewModelBT3::onCLickReset}"
                                    android:text="Reset"
                                    android:textColor="@color/bt_error_red"
                                    android:textSize="11dp"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_reg"
                android:text="@{viewModelBT3.Recmnd4u}"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_10sdp"
                tools:text="Recommended For You" />

            <include
                android:id="@+id/shim_book"
                layout="@layout/shimmer_booking_page"
                android:visibility="@{viewModelBT3.mIsLoading?View.VISIBLE:View.GONE}" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Loading..."
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                tools:visibility="visible"
                android:visibility="@{viewModelBT3.mIsLoading?View.VISIBLE:View.GONE}" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/types_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:visibility="@{viewModelBT3.mIsLoading?View.GONE:View.VISIBLE}"
                tools:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/grey"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:visibility="@{viewModelBT3.mIsLoading?View.GONE:View.VISIBLE}"
                android:weightSum="3">

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/grey" />


                <LinearLayout
                    android:layout_width=".0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="@{viewModelBT3::onCLickPaymentType}">

                    <ImageView
                        android:id="@+id/img_cash"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@{viewModelBT3.CashClicked?@drawable/ic_cash:viewModelBT3.walletClicked?@drawable/ic_wallet:viewModelBT3.CardClicked?@drawable/bt_ic_card:@drawable/ic_cash}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@{viewModelBT3.paymentMethod}"
                        android:textColor="@color/clr_black"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/icon_down"
                        tools:text="Cash" />

                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width=".0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="@{viewModelBT3::onCLickPromoType}">

                    <ImageView
                        android:id="@+id/img_promo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_promo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@{viewModelBT3.promoStatus}"
                        android:textColor="@color/clr_black"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/icon_down"
                        tools:text="Promo" />

                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width=".0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_myself_book"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_myself" />

                    <TextView
                        android:id="@+id/tv_myself_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:drawablePadding="@dimen/_6sdp"
                        android:fontFamily="@font/roboto_reg"
                        android:gravity="center_vertical"
                        android:text="@{viewModelBT3.Myself}"
                        android:textColor="@color/clr_black"
                        tools:text="Myself" />
                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/grey" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp">

                <RelativeLayout
                    android:id="@+id/book_now"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="false"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/black_round_bg"
                    android:onClick="@{viewModelBT3::onClickBookNow}"
                    android:visibility="@{viewModelBT3.mIsLoading?View.GONE:View.VISIBLE}">
                    <!--                            android:enabled="@{viewModel.isDriversAvailable}"-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@{viewModelBT3.book+viewModelBT3.bookcartypename}"
                        android:textColor="@color/clr_white"
                        android:textSize="@dimen/_14sdp"
                        tools:text="BOOK NOW" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
