<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.tyt.client.ui.homeScreen.userHistory.HistoryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
    android:id="@+id/NestedSV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clr_white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:onClick="@{viewModel::onCLickBack}"
                app:srcCompat="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                tools:text="History"
                android:text="@{viewModel.translationModel.txt_history}"
                android:textColor="@color/clr_0A2463"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:id="@+id/types_tab"
                android:layout_below="@id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/types_normal_bg"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@{viewModel.upcomingClicked?@drawable/types_selected_bg:@drawable/white_bg}"
                    android:fontFamily="@font/roboto_reg"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="@{viewModel::onClickUpcoming}"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Upcoming"
                    android:textAlignment="center"
                    android:textColor="@{viewModel.upcomingClicked?@color/clr_white:@color/bt_black}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:onClick="@{viewModel::onClickCompleted}"
                    android:textColor="@{viewModel.completedClicked?@color/clr_white:@color/bt_black}"
                    android:fontFamily="@font/roboto_reg"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="@dimen/_5sdp"
                    android:background="@{viewModel.completedClicked?@drawable/types_selected_bg:@drawable/white_bg}"
                    android:textAlignment="center"
                    android:text="Complete"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@{viewModel.cancelledClicked?@color/clr_white:@color/bt_black}"
                    android:paddingBottom="@dimen/_5sdp"
                    android:onClick="@{viewModel::onClickCancelled}"
                    android:fontFamily="@font/roboto_reg"
                    android:background="@{viewModel.cancelledClicked?@drawable/types_selected_bg:@drawable/white_bg}"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Cancelled"/>
            </LinearLayout>

            <!--android:background="@{viewModel.cancelledClicked?@drawable/types_selected_bg:}"-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/types_tab"
                android:visibility="gone"
                />

            <!--android:visibility="@{!viewModel.noItem?View.VISIBLE:View.GONE}"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:visibility="@{viewModel.noItem?View.VISIBLE:View.GONE}"
                android:gravity="center">

                <pl.droidsonroids.gif.GifTextView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/history_gif"/>

                <TextView
                    android:id="@+id/no_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    tools:text="No History Found"
                    android:text="@{viewModel.translationModel.txt_no_history_foun}"
                    android:textColor="@color/clr_0A2463"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <include
                android:id="@+id/shim1"
                android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}"
                android:layout_below="@+id/types_tab"
                layout="@layout/shimmer_history"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</layout>