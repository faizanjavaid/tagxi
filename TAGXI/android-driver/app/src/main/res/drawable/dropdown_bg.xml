<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
        android:state_focused="true">
        <shape android:padding="@dimen/edit_text_border_padding" android:shape="rectangle">
            <stroke android:width="@dimen/edit_text_border_width" android:color="@color/edit_text_border_selected" />
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/edit_text_border_radius"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="@dimen/edit_text_border_padding" android:shape="rectangle">
            <stroke android:width="@dimen/edit_text_border_width" android:color="@color/edit_text_border_unselected" />
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/edit_text_border_radius"/>
        </shape>
    </item>
</selector>