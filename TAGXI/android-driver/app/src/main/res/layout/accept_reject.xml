<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.acceptReject.AcceptRejectViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            class="com.tyt.driver.utilz.MySupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/new_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@{viewModel.later==0 ? viewModel.translationModel.txt_new_job : viewModel.translationModel.txt_pre_order}"
                android:textColor="@color/clr_white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_reg"
                android:onClick="@{viewModel::onClickReject}"
                android:text="@{viewModel.translationModel.txt_reject}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pickup_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/new_job"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/clr_white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawableStart="@drawable/green_rect"
                android:drawablePadding="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_reg"
                android:maxLines="1"
                android:text="@{viewModel.pickupAddress}"
                android:textColorHint="@color/clr_353B50"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/blinkTimeImge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@+id/user_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/pulse_anim_back"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"

            android:textColor="@color/clr_white"
            android:textSize="@dimen/_12sdp" />
        <ImageView
            android:id="@+id/blinkTimeImage2"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@+id/user_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/pulse_anim_back"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/blinkTime"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@+id/user_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/primary_circle"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@{viewModel.counterText}"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/_12sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/accept_txt"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            app:cardBackgroundColor="@color/clr_white"
            app:cardCornerRadius="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:srcCompat="@drawable/profile_place_holder" />

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/user_img"
                    android:fontFamily="@font/roboto_reg"
                    android:text="@{viewModel.userName}"
                    android:textColor="@color/clr_0A2463"
                    android:textSize="@dimen/_16sdp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_txt"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="19dp"
                    android:layout_toEndOf="@+id/user_img"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/gray_holo_dark"
                    android:rating="3"
                    android:stepSize="1"
                    android:theme="@style/Widget.AppCompat.RatingBar" />

                <TextView
                    android:id="@+id/schduleAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratingBar"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_med"
                    android:text="@{viewModel.translationModel.txt_schedule_at + ` `}"
                    android:textColor="@color/clr_black"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="@{viewModel.later==0?View.GONE:View.VISIBLE}" />

                <TextView
                    android:id="@+id/schduleAttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratingBar"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/schduleAt"
                    android:fontFamily="@font/roboto_med"
                    android:text="@{viewModel.tripStartTime}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_below="@+id/schduleAt"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/colorPrimary" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/accept_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/roboto_reg"
            android:gravity="center"
            android:onClick="@{viewModel::onClickAccept}"
            android:text="@{viewModel.translationModel.txt_accept}"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/_16sdp" />

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            tools:visibility="gone"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>