<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/edit_text_border"
        android:padding="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/insr_title_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp">

            <ImageView
                android:id="@+id/insr_type_img"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/chip_img"/>

            <TextView
                android:id="@+id/insr_type_name"
                android:layout_toEndOf="@id/insr_type_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto (Ricksaw)"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/clr_black"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/insr_detail_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insr_title_lay"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_15sdp"
            android:weightSum="6">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/insr_type_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Get Your Instant Ride Now"
                    android:textColor="@color/clr_black"
                    android:paddingStart="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"/>

                <TextView
                    android:id="@+id/insr_type_long_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:textColor="@color/blue"
                    android:text="Supersized rides when you need more seats and comfort. Etra legroom and boot space for everyone." />

            </LinearLayout>

            <TextView
                android:id="@+id/insr_type_price"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="From 35"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>