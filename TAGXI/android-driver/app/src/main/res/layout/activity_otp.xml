<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.otpscreen.OTPViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/bgotp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/confirem_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/top_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_back_img" />

                    <TextView
                        android:id="@+id/signup_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_14sdp"
                        android:fontFamily="@font/roboto_reg"
                        android:onClick="@{viewModel::onClickLogin}"
                        android:text="@{viewModel.translationModel.txt_log_In}"
                        android:textColor="@color/clr_0A2463"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/signup_txt"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@color/clr_0A2463" />

                    <TextView
                        android:id="@+id/Login_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_confirm_code}"
                        android:textColor="@color/clr_0A2463"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_med"
                    android:text="@{viewModel.translationModel.txt_your_otp}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="@{viewModel.shownOTP?View.VISIBLE:View.GONE}" />

                <com.tyt.driver.ui.otpscreen.OtpView
                    android:id="@+id/opt_customview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:layoutDirection="ltr"
                    android:textSize="@dimen/_22sdp" />

                <TextView
                    android:id="@+id/resnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:drawableStart="@drawable/resend"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_reg"
                    android:onClick="@{viewModel::onClickResend}"
                    android:text="@{viewModel.translationModel.txt_resend}"
                    android:textColor="@color/clr_8491B1"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="00 : 30"
                    android:fontFamily="@font/roboto_reg"
                    android:textColor="@color/clr_8491B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/confirem_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/blue_border"
            android:onClick="@{viewModel::onclickverfiy}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:fontFamily="@font/roboto_med"
                android:text="@{viewModel.translationModel.txt_confirm_code}"
                android:textColor="@color/clr_white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            tools:visibility="gone"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>