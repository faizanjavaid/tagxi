<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.docsEdit.DocsEditViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_imag"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:onClick="@{viewModel::onClickBack}"
                app:srcCompat="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_toEndOf="@+id/back_imag"
                android:fontFamily="@font/roboto_reg"
                android:text="@{viewModel.translationModel.txt_manage_docs}"
                android:textColor="@color/clr_222B45"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <View
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/clr_222B45" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vw"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:onClick="@{viewModel::onClickImage}"
                        app:imageUrlProfile="@{viewModel.bitmap_profilePicture}"
                        app:srcCompat="@drawable/ic_camera" />

                    <TextView
                        android:id="@+id/exp_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@+id/image"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/grey_rect_border"
                        android:drawableEnd="@drawable/cal_img"
                        android:fontFamily="@font/roboto_reg"
                        android:gravity="center_vertical"
                        android:hint="@{viewModel.translationModel.txt_expiry_date}"
                        android:onClick="@{viewModel::onClickExpiry}"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@{viewModel.expDate}"
                        android:textColor="@color/clr_222B45"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="@{viewModel.hasExpiry?View.VISIBLE:View.GONE}" />

                    <EditText
                        android:id="@+id/id_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@+id/exp_date"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:afterTextChanged="@{viewModel::onIdNumberChanged}"
                        android:background="@drawable/grey_rect_border"
                        android:fontFamily="@font/roboto_reg"
                        android:hint="@{viewModel.translationModel.txt_id_num}"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/clr_222B45"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="@{viewModel.hasIdNumber?View.VISIBLE:View.GONE}" />

                    <RelativeLayout
                        android:id="@+id/upload"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@+id/id_num"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/blue_border"
                        android:onClick="@{viewModel::onClickUpload}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:fontFamily="@font/roboto_med"
                            android:text="@{viewModel.translationModel.txt_upload}"
                            android:textColor="@color/clr_white"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_below="@+id/upload" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            tools:visibility="gone"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>