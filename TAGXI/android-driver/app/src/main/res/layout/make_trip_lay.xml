<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.homeScreen.makeTrip.MakeTripViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="@{viewModel::onClickBackImg}"
            app:srcCompat="@drawable/ic_back_img" />

        <TextView
            android:id="@+id/back_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/back_arrow"
            android:fontFamily="@font/roboto_bold"
            android:text="@{viewModel.translationModel.txt_back}"
            android:textColor="@color/clr_0A2463"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/back_txt">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp" />

            <LinearLayout
                android:id="@+id/pickup_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/clr_white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:drawableStart="@drawable/green_rect"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_reg"
                    android:hint="@{viewModel.translationModel.txt_enter_pick}"
                    android:maxLines="1"
                    android:text="@{viewModel.pickupAddress}"
                    android:textColorHint="@color/clr_353B50"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/pickup_lay"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/clr_white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:drawableStart="@drawable/red_rect"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_reg"
                    android:hint="@{viewModel.translationModel.txt_enter_drop}"
                    android:maxLines="1"
                    android:text="@{viewModel.dropAddress}"
                    android:textColorHint="@color/clr_353B50"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/next_option"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_choose_types}"
                        android:textColor="@color/clr_0A2463"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_med"
                        android:text="@{viewModel.translationModel.txt_no_types_found}"
                        android:textColor="@color/clr_black"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="@{viewModel.noItem?View.VISIBLE:View.GONE}" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/types_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_3sdp"
                        android:visibility="@{viewModel.noItem?View.GONE:View.VISIBLE}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/clr_black"
                        android:visibility="@{viewModel.onClickTypes?View.VISIBLE:View.GONE}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.onClickTypes?View.VISIBLE:View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_6sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.ETA}"
                            android:textColor="@color/clr_0A2463"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_navigation"
                            android:drawablePadding="@dimen/_6sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.distance}"
                            android:textColor="@color/clr_0A2463"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="@dimen/_6sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.price}"
                            android:textColor="@color/clr_0A2463"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/next_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:onClick="@{viewModel::onClickNext}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@{viewModel.translationModel.txt_next}"
                    android:textColor="@color/clr_white"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="@{viewModel.onClickTypes?View.VISIBLE:View.GONE}" />

            </RelativeLayout>

        </RelativeLayout>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>