<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/clr_white"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_2sdp"
        app:contentPadding="12dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_internet_title"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:text="@string/text_enable_internet"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/clr_black" />

            <TextView
                android:id="@+id/txt_internet_content"
                android:gravity="start|left"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:text="A connection to the internet is required to continue."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp">

                <TextView
                    android:id="@+id/btn_exit_internetialog"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text="@string/Txt_Exit"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/clr_black" /><!--    <TextView
                    android:id="@+id/btn_data_internetdialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:text="@string/text_data"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="73dp"
                    android:layout_marginEnd="73dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="73dp" />-->

                <TextView
                    android:elevation="4dp"
                    android:id="@+id/btn_settings_internetdialog"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text="@string/txt_Setting"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/clr_black" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>