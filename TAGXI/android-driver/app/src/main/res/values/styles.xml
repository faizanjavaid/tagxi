    <style name="ShapeAppearanceOverlay.Pill">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.Cut">
        <item name="cornerSize">105%</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="android:topLeftRadius">@dimen/_50sdp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut.Medium">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>

    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="MyCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RIDEOTP_Theme_Dialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
