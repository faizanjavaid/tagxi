    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/clr_white</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>-->
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/clr_white</item>
    </style>

    <style name="RoundedDialogNarrow" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="LoginTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/bt_very_light_gray</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="HelperText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">start</item>
          <item name="helperTextTextColor">@color/clr_FF0000</item>    </style>
    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColorHint">@drawable/text_input_text_color</item>
    </style>

