<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.homeScreen.earnings.EarningsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:onClick="@{viewModel::onCLickBack}"
                    app:srcCompat="@drawable/ic_back_img" />

                <TextView
                    android:id="@+id/back_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/back_arrow"
                    android:fontFamily="@font/roboto_reg"
                    android:text="@{viewModel.translationModel.side_Menu_Earning}"
                    android:textColor="@color/clr_0A2463"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:id="@+id/vw1"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@+id/back_txt"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/gray_holo_light" />

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_below="@+id/vw1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/clr_F8F8F8"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{viewModel::onCLickToday}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_med"
                            android:gravity="center"
                            android:text="@{viewModel.translationModel.txt_today}"
                            android:textColor="@{viewModel.onTodayClick?@color/colorPrimary:@color/clr_979797}"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"
                            android:visibility="@{viewModel.onTodayClick?View.VISIBLE:View.GONE}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{viewModel::onCLickWeek}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_med"
                            android:gravity="center"
                            android:text="@{viewModel.translationModel.txt_weekly}"
                            android:textColor="@{viewModel.onWeekClick?@color/colorPrimary:@color/clr_979797}"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"
                            android:visibility="@{viewModel.onWeekClick?View.VISIBLE:View.GONE}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{viewModel::onClickReport}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_med"
                            android:gravity="center"
                            android:text="@{viewModel.translationModel.txt_report}"
                            android:textColor="@{viewModel.onReportClick?@color/colorPrimary:@color/clr_979797}"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"
                            android:visibility="@{viewModel.onReportClick?View.VISIBLE:View.GONE}" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next_previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <!--                    android:visibility="@{viewModel.onWeekClick?View.VISIBLE:viewModel.onReportClick?View.GONE:View.GONE}"-->

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:onClick="@{viewModel::onClickPrevious}"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="center"
                            android:text="Previous Week"
                            android:textColor="@color/clr_white"
                            android:textSize="@dimen/_12sdp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:onClick="@{viewModel::onClickNext}"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0B4DD8"
                            android:fontFamily="@font/roboto_reg"
                            android:gravity="center"
                            android:text="Next Week"
                            android:textColor="@color/clr_white"
                            android:textSize="@dimen/_12sdp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/date_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/next_previous"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:visibility="@{viewModel.onReportClick?View.VISIBLE:View.GONE}"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:onClick="@{viewModel::onClickStartDate}"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/roboto_reg"
                                android:hint="@{viewModel.translationModel.txt_from_date}"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="@={viewModel.fromDateValue}"
                                android:textColor="@color/clr_222B45"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:onClick="@{viewModel::onClickToDate}"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/roboto_reg"
                                android:hint="@{viewModel.translationModel.txt_to_date}"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="@={viewModel.toDateValue}"
                                android:textColor="@color/clr_222B45"
                                android:textSize="@dimen/_12sdp"
                                tools:text="hshsh"
                                />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/call"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_below="@+id/phone"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:onClick="@{viewModel::onClickSearch}"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:padding="@dimen/_1sdp"
                                android:fontFamily="@font/roboto_bold"
                                android:hint="@{viewModel.translationModel.txt_to_date}"
                                android:text="@{viewModel.translationModel.txt_search}"
                                android:textColor="@color/clr_white"
                                android:textSize="@dimen/_10sdp"
                                tools:text="Search"
                                tools:textColor="@color/clr_white"
                                />

                        </androidx.cardview.widget.CardView>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_below="@+id/call" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/date_search"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.earningsReportGenrated?View.VISIBLE:viewModel.onReportClick?View.GONE:View.VISIBLE}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_reg"
                        android:gravity="center"
                        android:text="@{viewModel.CurrentDay}"
                        android:textColor="#7f7f7f"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_med"
                        android:gravity="center"
                        android:text="@{viewModel.totalAmount}"
                        android:textColor="@color/clr_222B45"
                        android:textSize="@dimen/_15sdp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:visibility="@{viewModel.onWeekClick ? View.VISIBLE : View.GONE}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:alpha="0.2"
                        android:background="@color/clr_222B45" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_reg"
                                android:gravity="center"
                                android:text="@{viewModel.totalTrips}"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_reg"
                                android:text="@{viewModel.translationModel.txt_total_trip}"
                                android:textColor="@color/clr_7F7F7F"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:alpha="0.2"
                            android:background="@color/clr_222B45" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_reg"
                                android:gravity="center"
                                android:text="@{viewModel.walletCount}"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_reg"
                                android:text="@{viewModel.translationModel.txt_wallet_count}"
                                android:textColor="@color/clr_7F7F7F"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:alpha="0.2"
                            android:background="@color/clr_222B45"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_reg"
                                android:gravity="center"
                                android:text="@{viewModel.cashCount}"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_reg"
                                android:text="@{viewModel.translationModel.txt_cash_trips}"
                                android:textColor="@color/clr_7F7F7F"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.2"
                        android:background="@color/clr_222B45" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/online_hrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.translationModel.txt_online_hrs}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/online_hrs_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.onlineHrs}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/trip_kms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.translationModel.txt_trip_kms}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/trip_kms_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.tripKms}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.translationModel.txt_wallet_pay}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.walletPayment}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.translationModel.txt_wallet_count}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.walletCount}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.translationModel.txt_cash_trip_amt}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_reg"
                            android:text="@{viewModel.cashTrips}"
                            android:textColor="@color/clr_353B50"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_med"
                            android:text="@{viewModel.translationModel.txt_total_earn}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_med"
                            android:text="@{viewModel.totalAmount}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            tools:visibility="gone"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>