<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.approval.ApprovalViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wait_approval"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            app:srcCompat="@drawable/docs_imggg" />

        <TextView
            android:id="@+id/wait_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@{viewModel.title}"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wait_approval"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:alpha="0.5"
            android:fontFamily="@font/roboto_reg"
            android:gravity="center_horizontal"
            android:text="@{viewModel.reasonss}"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/primary_rect"
            android:fontFamily="@font/roboto_reg"
            android:gravity="center"
            android:visibility="@{viewModel.showdocsbutton?View.VISIBLE:View.GONE}"
            android:onClick="@{viewModel::onClickMoveDocument}"
            android:text="@{viewModel.translationModel.txt_upload_docs}"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

</layout>