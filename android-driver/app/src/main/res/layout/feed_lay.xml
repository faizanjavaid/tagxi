<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable

            name="viewModel"
            type="com.tyt.driver.ui.feedback.FeedbackFragViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/back_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toEndOf="@+id/back_arrow"
                android:fontFamily="@font/roboto_bold"
                android:text="@{viewModel.translationModel.txt_feedbackss}"
                android:textColor="@color/clr_0A2463"
                android:textSize="@dimen/_18sdp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/driver_img_card"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/head"
            android:layout_marginStart="@dimen/_15sdp">

            <ImageView
                android:id="@+id/driver_prof_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:feeddriverImg="@{viewModel.DriverPic}"
                app:srcCompat="@drawable/profile_place_holder" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driver_img_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_reg"
            android:text="@{viewModel.DriverName}"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp">

            <RatingBar
                android:id="@+id/rating_user_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:numStars="5"
                android:progressBackgroundTint="@color/gray_holo_light"
                android:progressTint="@color/rating_yellow"
                android:rating="@={viewModel.userReview}" />

        </LinearLayout>

        <EditText
            android:id="@+id/comment_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@+id/rating"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:afterTextChanged="@{viewModel::onUserFeedback}"
            android:background="@drawable/rect_border"
            android:fontFamily="@font/roboto_reg"
            android:gravity="start"
            android:hint="@{viewModel.translationModel.txt_write_few}"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textColor="@color/clr_353B50"
            android:textSize="@dimen/_12sdp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/comment_section"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/blue_border"
            android:onClick="@{viewModel::onClickSubmitFeedback}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="@{viewModel.translationModel.txt_submit}"
                android:textColor="@color/clr_white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            tools:visibility="gone"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>