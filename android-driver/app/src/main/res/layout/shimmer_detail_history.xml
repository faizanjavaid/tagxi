<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/title_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_back_img" />

                    <TextView
                        android:id="@+id/back_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/clr_0A2463"
                        android:textSize="@dimen/_14sdp"
                        tools:text="History Details" />

                </RelativeLayout>

                <View
                    android:id="@+id/vw"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/title_lay"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/clr_black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/driver_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/d_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/d_trip_id_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/d_trip_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/roboto_med"
                                    android:textColor="@color/clr_black"
                                    android:textSize="@dimen/_12sdp"
                                    tools:text="ID" />

                                <TextView
                                    android:id="@+id/trip_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_med"
                                    android:textColor="@color/clr_black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:text="Trip date" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/d_viewhis"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_below="@id/d_trip_id_lay"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                android:background="@color/clr_black" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/d_viewhis">

                                <LinearLayout
                                    android:id="@+id/detail_driver_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/user_img"
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        app:srcCompat="@drawable/profile_place_holder" />

                                    <TextView
                                        android:id="@+id/name_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/roboto_reg"
                                        android:textAlignment="center"
                                        android:textColor="@color/clr_0A2463"
                                        tools:text="Driver Name" />

                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_13sdp"
                                        android:layout_marginEnd="19dp"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:progressBackgroundTint="@color/gray_holo_dark"
                                        android:progressTint="@color/quantum_yellow"
                                        android:scaleX=".7"
                                        android:scaleY=".7"
                                        android:stepSize="1"
                                        android:theme="@style/Widget.AppCompat.RatingBar" />

                                </LinearLayout>

                                <View
                                    android:id="@+id/info_vw_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@color/clr_black"
                                    android:rotation="90" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:foregroundGravity="right"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/carimg"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_icon_car" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_reg"
                                        android:textColor="@color/clr_0A2463"
                                        tools:text="Sedan" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_reg"
                                        android:textColor="@color/clr_0A2463"
                                        tools:text="Sedan Type" />

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/total_info_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_info"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="9">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_15sdp">

                                <ImageView
                                    android:id="@+id/total_dur_ic"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/tot_dur_ic" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/total_dur_ic"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clr_black"
                                        tools:text="Total Duration" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold"
                                        tools:text="2h 10 min" />
                                </LinearLayout>


                            </RelativeLayout>

                            <View
                                android:id="@+id/total_info_view"
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:background="@color/clr_black"
                                android:rotation="90" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:layout_weight="4">

                                <ImageView
                                    android:id="@+id/total_dist_ic"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/tot_dist_ic" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/total_dist_ic"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clr_black"
                                        tools:text="Total Distance" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold"
                                        tools:text="253 km" />
                                </LinearLayout>


                            </RelativeLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/pick_drop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/total_info_card"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/trip_start_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/roboto_med"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    tools:text="start" />

                                <TextView
                                    android:id="@+id/trip_end_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_30sdp"
                                    android:fontFamily="@font/roboto_med"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    tools:text="end" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/pickup_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_9sdp"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        android:drawableStart="@drawable/green_dot"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/roboto_reg"
                                        android:hint="Enter Pickup Address"
                                        android:maxLines="1"
                                        android:singleLine="false"
                                        android:textColorHint="@color/clr_353B50"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:srcCompat="@drawable/darkgreenline" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/darkgreenline" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/line" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/ligtline" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/darkredline" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    app:srcCompat="@drawable/darkredline" />

                                <LinearLayout
                                    android:id="@+id/drop_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_below="@+id/pickup_lay"
                                    android:layout_marginStart="@dimen/_1sdp"
                                    android:layout_marginEnd="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        android:drawableStart="@drawable/red_dot"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/roboto_reg"
                                        android:hint="Enter Drop Address"
                                        android:maxLines="1"
                                        android:singleLine="false"
                                        android:textColorHint="@color/clr_353B50"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pick_drop"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_13sdp"
                                android:text="Fare Details" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/que_bg"
                                android:padding="@dimen/_3sdp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/que_mark" />

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/bill_lay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/sub_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:text="Base Price" />

                            <TextView
                                android:id="@+id/frae_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                tools:text="INR 5.00" />

                            <TextView
                                android:id="@+id/tax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/frae_price"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/tax_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:text="Taxes" />

                            <TextView
                                android:id="@+id/tax_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/frae_price"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                tools:text="INR 5.00" />


                            <TextView
                                android:id="@+id/distance_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tax"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:text="Distance Price" />

                            <TextView
                                android:id="@+id/distance_price_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tax"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                tools:text="INR 5.00" />


                            <TextView
                                android:id="@+id/time_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/distance_price"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:text="Time Price" />

                            <TextView
                                android:id="@+id/time_price_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/distance_price"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                tools:text="INR 5.00" />


                            <TextView
                                android:id="@+id/waiting_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/time_price"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone"
                                android:text="Waiting Price" />

                            <TextView
                                android:id="@+id/waiting_price_price_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/time_price"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone"
                                tools:text="INR 5.00" />


                            <TextView
                                android:id="@+id/cancel_fee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/waiting_price"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                android:text="Cancellation Fee" />

                            <TextView
                                android:id="@+id/cancelfee_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/waiting_price"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_0A2463"
                                android:textSize="@dimen/_12sdp"
                                tools:text="INR 0.00" />

                            <TextView
                                android:id="@+id/driver_commision"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cancel_fee"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/frae_price"
                                android:alpha="0.5"
                                android:fontFamily="@font/roboto_med"
                                android:textColor="@color/clr_green"
