<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_holo_light"
        android:gravity="center"
        android:padding="@dimen/_11sdp"
        android:text="Like to pay by"
        android:fontFamily="@font/roboto_med"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="normal"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/clr_white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/PB_Cashlayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:background="@color/clr_white"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_cash"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_25sdp" />

            <TextView
                android:id="@+id/txt_pay_cash"
                android:layout_width="wrap_content"
                android:text="@string/txt_cash"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_med"
                android:textColor="@color/clr_0A2463"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp"
        android:background="@color/clr_white"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/PB_Cardlayout"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            app:srcCompat="@drawable/ic_card_yellow"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_25sdp" />

        <TextView
            android:id="@+id/txt_pay_card"
            android:layout_width="wrap_content"
            android:text="@string/txt_card"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_med"
            android:textColor="@color/clr_0A2463"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PB_walletlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@color/clr_white"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_wallet" />

        <TextView
            android:id="@+id/txt_pay_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="@string/txt_wallet"
            android:textColor="@color/clr_0A2463"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>