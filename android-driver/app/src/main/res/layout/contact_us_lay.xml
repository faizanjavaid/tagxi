<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.tyt.driver.ui.keyValidation.KeyValidationViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:background="@drawable/ride_otp_dialog_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cancel_cnt"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/cancel_cross" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:hint="Name "
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_et_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/roboto_med"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/clr_black"
                    android:textColorHint="@color/grey" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/countrychoose_dg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border"
                    android:drawableEnd="@drawable/down_arrow"
                    android:fontFamily="@font/roboto_med"
                    android:padding="@dimen/_10sdp"
                    android:text="@{viewModel.countryCode}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    tools:text="+91"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColorHint="@color/grey" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="bottom"
                    android:layout_weight="3"
                    android:foregroundGravity="center_vertical"
                    android:hint="Phone"
                    android:gravity="center"
                    android:background="@drawable/edit_text_border"
                    app:hintTextColor="@color/clr_222B45">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_et_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/roboto_med"
                        android:inputType="text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:afterTextChanged="@{viewModel::onCntPhoneChanged}"
                        android:paddingTop="@dimen/_8sdp"
                        android:textColor="@color/clr_black"
                        android:textColorHighlight="@color/colorPrimary"
                        android:text="@{viewModel.phone}"
                        android:maxLength="10"
                        android:ems="10"
                        android:focusable="true"
                        android:clickable="true"
                        android:textColorHint="@color/grey" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:hint="Email"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_et_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_med"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/clr_black"
                    android:textColorHint="@color/grey" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:hint="Message (min 15 to 30)"
                android:background="@drawable/edit_text_border">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/message_et_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_med"
                    android:height="@dimen/_100sdp"
                    android:padding="@dimen/_10sdp"
                    android:gravity="top|start"
                    android:textAlignment="textStart"
                    android:minLines="9"
                    android:textColor="@color/clr_black"
                    android:textColorHint="@color/grey" />


            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:id="@+id/comp_char_count_cnt_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Char Count : "
                android:fontFamily="@font/roboto_reg"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/send_msg_tv_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/send_bg"
                android:drawablePadding="@dimen/_10sdp"
                android:text="SEND"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_send_24" />

        </LinearLayout>

        <!-- android:visibility="@{viewModel.showcntdgloader ? View.VISIBLE : View.GONE}-->

    </RelativeLayout>

</layout>