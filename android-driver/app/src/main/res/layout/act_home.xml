<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tyt.driver.ui.homeScreen.HomeViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/home_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/clr_white"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:fontFamily="@font/roboto_reg"
            android:text="@{viewModel.isOnline ? viewModel.translationModel.txt_your_online : viewModel.translationModel.txt_your_offline}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />
<!--        android:visibility="@{viewModel.isOnline ? View.GONE : View.VISIBLE}"-->

        <FrameLayout
            android:id="@+id/fragment_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/on_off"
            android:layout_above="@+id/bott_card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bott_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@{viewModel.isOnline?@drawable/red_border_cir:@drawable/green_border_cir}"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@{viewModel.isOnline?@string/OFF:@string/ON}"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/online_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/space"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_8sdp">

            <TextView
                android:id="@+id/stop"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_circle"
                android:fontFamily="@font/roboto_reg"
                android:gravity="center"
                android:elevation="@dimen/_5sdp"
                android:onClick="@{viewModel::onClickGo}"
                android:text="@{viewModel.translationModel.txt_stop}"
                android:textColor="@color/clr_white"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{viewModel.isOnline?View.VISIBLE:View.GONE}" />

            <TextView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/green_border_cir"
                android:elevation="@dimen/_5sdp"
                android:fontFamily="@font/roboto_reg"
                android:gravity="center"
                android:onClick="@{viewModel::onClickGo}"
                android:text="@{viewModel.translationModel.txt_go}"
                android:textColor="@color/clr_white"
                android:textSize="@dimen/_14sdp"
                android:visibility="@{viewModel.isOnline ? View.GONE : View.VISIBLE}" />

        </RelativeLayout>

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:layout_above="@+id/bott_card" />

        <!--        <RelativeLayout-->
        <!--            android:id="@+id/online_offline"-->
