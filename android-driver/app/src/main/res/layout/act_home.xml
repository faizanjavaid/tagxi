        <!--            android:layout_height="@dimen/_38sdp"-->
        <!--            android:layout_above="@+id/bott_card"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginBottom="@dimen/_10sdp"-->
