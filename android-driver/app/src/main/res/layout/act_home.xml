        <!--                app:track="@color/clr_transparent" />-->

        <!--            &lt;!&ndash;            android:checked="@{viewModel.setToglleStatus}"&ndash;&gt;-->

        <!--        </RelativeLayout>-->


        <androidx.cardview.widget.CardView
            android:id="@+id/bott_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
           android:visibility="gone"
            app:cardElevation="@dimen/_5sdp">

            <!-- android:visibility="@{viewModel.hideBar?View.VISIBLE:View.GONE}"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="@{viewModel::onClickHome}"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:src="@{!viewModel.homeClicked?@drawable/icon_home:@drawable/icon_color_home}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_home}"
                        android:textColor="@{viewModel.homeClicked?@color/clr_E70000:@color/clr_black}"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{viewModel::onClickHistory}"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:src="@{!viewModel.historyClicked?@drawable/icon_history:@drawable/icon_color_history}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_my_booking}"
                        android:textColor="@{viewModel.historyClicked?@color/clr_E70000:@color/clr_black}"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{viewModel::onClickProfile}"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:src="@{!viewModel.profileClicked?@drawable/icon_profile:@drawable/icon_clr_profile}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reg"
                        android:text="@{viewModel.translationModel.txt_profile}"
                        android:textColor="@{viewModel.profileClicked?@color/clr_E70000:@color/clr_black}"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/progressBar"
            layout="@layout/progress_dialog"
            android:visibility="@{viewModel.mIsLoading ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>

</layout>
